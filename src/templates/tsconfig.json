{
  "compilerOptions": {
    "module": "commonjs",
    "jsx": "react",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["./src/apps/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["dist"]
}